<Window x:Class="Elka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elka"
        mc:Ignorable="d"
        Title="Ёлко-генератор" Height="156" Width="233" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="Height_TextBox" HorizontalAlignment="Left" Height="23" Margin="95,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="10"/>
        <Label x:Name="label" Content="Высота ёлки:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Generate_Button" Content="Сгенерировать" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="205" Height="25" Click="Generate_Button_Click"/>
        <Slider x:Name="ToysPercent_Slider" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" Width="205" Maximum="100" LargeChange="5" ValueChanged="ToysPercent_Slider_ValueChanged" Value="20"/>
        <Label x:Name="Percent_Label" Content="%" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="205" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
